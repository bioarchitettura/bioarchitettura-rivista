# Environment Configuration
NODE_ENV=production
PORT=3000

# Frontend Configuration
FRONTEND_URL=https://bioarchitettura.github.io

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bioarchitettura
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=200
OPENAI_TEMPERATURE=0.7

# Google Translate API
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Tidio Chat
TIDIO_API_KEY=your-tidio-api-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Security
HELMET_CSP_REPORT_URI=/api/csp-report
SESSION_SECRET=your-session-secret-here

# Performance
COMPRESSION_THRESHOLD=1024
REQUEST_TIMEOUT=30000

# Development
ENABLE_CORS_DEBUG=false
ENABLE_SQL_LOGGING=false