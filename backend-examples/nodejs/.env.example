# Bioarchitettura Rivista API Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# API Security
API_KEYS=your_api_key_1,your_api_key_2
ADMIN_API_KEYS=admin_key_1,admin_key_2

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4000,https://bioarchitettura.github.io,https://www.bioarchitettura.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Cache Configuration
CACHE_TTL=1800

# Security
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' *.openai.com
ENABLE_HTTPS_REDIRECT=false

# Performance
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# External Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
TIDIO_CHAT_KEY=your_tidio_key

# Development
DEBUG=bioarchitettura:*
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true