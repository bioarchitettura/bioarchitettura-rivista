{
    "name": "bioarchitettura-php-api",
    "description": "PHP backend API for Bioarchitettura magazine with AI features",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "predis/predis": "^2.0",
        "firebase/php-jwt": "^6.0",
        "openai-php/client": "^0.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "guzzlehttp/guzzle": "^7.7",
        "symfony/var-dumper": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Bioarchitettura\\API\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bioarchitettura\\API\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src/ tests/",
        "analyze": "phpstan analyse src/ --level=8",
        "fix": "phpcbf --standard=PSR12 src/ tests/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}